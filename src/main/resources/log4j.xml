<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration>

	<Appenders>

		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L)  - %m%n" />
		</Console>

	</Appenders>


	<Loggers>

		<Root level="DEBUG" includeLocation="true">
			<AppenderRef ref="STDOUT" level="DEBUG" />
		</Root>

	</Loggers>

</Configuration>